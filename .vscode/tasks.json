{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dbg build",
            "type": "shell",
            "command": "Set-Location '${workspaceFolder}\\drivers'; .\\build_drivers; if (-not $?) { exit 1 }; Set-Location '${workspaceFolder}\\os'; cargo build; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }",
            "problemMatcher": []
        },
        {
            "label": "dbg launch",
            "type": "shell",
            "command": "cd ${workspaceFolder}/target/debug; ./os.exe",
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "dbg chain",
            "dependsOn": [
                "dbg build",
                "dbg launch"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}